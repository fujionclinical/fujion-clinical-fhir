<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans profile="root">

        <!-- Data Source Configuration -->
        
        <bean id="dstu2DataSource" factory-bean="fhirDataSourceFactory" factory-method="create">
            <constructor-arg value="FHIR_DSTU2"/>
        </bean>

        <!-- Load formatters -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="org.fujionclinical.fhir.api.dstu2.common.Dstu2Formatters"/>
        </bean>

        <!-- Initialize model -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="org.coolmodel.mediator.fhir.dstu2.common.Dstu2Utils"/>
        </bean>

    </beans>

</beans>
