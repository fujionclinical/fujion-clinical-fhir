<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans profile="root">

        <!-- Data Source Configuration -->
        
        <bean id="dstu2DataSourceFactory"
              class="org.fujionclinical.fhir.api.dstu2.common.Dstu2DataSourceFactory"/>

        <bean id="dstu2DataSource" factory-bean="dstu2DataSourceFactory" factory-method="create">
            <constructor-arg value="FHIR_DSTU2"/>
        </bean>

        <bean id="dstu2MedicationService"
              class="org.fujionclinical.fhir.api.dstu2.medication.MedicationService">
            <constructor-arg ref="dstu2DataSource"/>
        </bean>

        <!-- Load formatters -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="org.fujionclinical.fhir.api.dstu2.common.Dstu2Formatters"/>
        </bean>

        <!-- Initialize model -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="edu.utah.kmm.model.cool.mediator.fhir.dstu2.common.Dstu2Utils"/>
        </bean>

    </beans>

</beans>
