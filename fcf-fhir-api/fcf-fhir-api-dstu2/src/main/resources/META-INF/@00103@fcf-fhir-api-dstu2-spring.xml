<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans profile="root">

        <!-- Data Source Configuration -->
        
        <bean id="dstu2DataSourceFactory"
              class="org.fujionclinical.fhir.api.dstu2.common.FhirDataSourceFactory"/>

        <bean id="dstu2DataSource" factory-bean="dstu2DataSourceFactory" factory-method="create">
            <constructor-arg value="FHIR_DSTU2"/>
        </bean>

        <bean id="dstu2ConditionService"
              class="org.fujionclinical.fhir.api.dstu2.condition.ConditionService">
            <constructor-arg ref="dstu2DataSource"/>
        </bean>

        <bean id="dstu2MedicationService"
              class="org.fujionclinical.fhir.api.dstu2.medication.MedicationService">
            <constructor-arg ref="dstu2DataSource"/>
        </bean>

        <bean id="dstu2DocumentService"
              class="org.fujionclinical.fhir.api.dstu2.document.DocumentService">
            <constructor-arg ref="dstu2DataSource"/>
        </bean>

        <bean id="dstu2DocumentTypeEnumerator"
              class="org.fujionclinical.fhir.api.dstu2.document.DocumentTypeEnumerator">
            <constructor-arg ref="dstu2DocumentService"/>
        </bean>

        <!-- Resource DAO Factories  -->

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.condition.ConditionDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.document.DocumentDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.encounter.EncounterDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.location.LocationDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.observation.ObservationDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.patient.PatientDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.practitioner.PractitionerDAOFactory"/>

        <!-- Model transforms -->

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.AnnotationTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.AttachmentTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.ConceptCodeTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.ConceptTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.ContactPointTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.IdentifierTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.PeriodTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.PersonNameTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.AddressTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.PrimitiveTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.QuantityTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.RangeTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.RatioTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.transform.SimpleQuantityTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.condition.ConditionTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.document.DocumentTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.encounter.EncounterTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.location.LocationTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.observation.ObservationComponentTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.observation.ReferenceRangeTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.patient.PatientTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.dstu2.practitioner.PractitionerTransform" factory-method="getInstance"/>

    </beans>

</beans>
