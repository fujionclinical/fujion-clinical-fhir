<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans profile="root">

        <!-- Data Source Configuration -->

        <bean id="r4DataSourceFactory"
              class="org.fujionclinical.fhir.api.r4.common.R4DataSourceFactory"/>

        <bean id="r4DataSource" factory-bean="r4DataSourceFactory" factory-method="create">
            <constructor-arg value="FHIR_R4"/>
        </bean>

        <bean id="r4ConditionService"
              class="org.fujionclinical.fhir.api.r4.condition.ConditionService">
            <constructor-arg ref="r4DataSource"/>
        </bean>

        <bean id="r4MedicationService"
              class="org.fujionclinical.fhir.api.r4.medication.MedicationService">
            <constructor-arg ref="r4DataSource"/>
        </bean>

        <bean id="r4DocumentService"
              class="org.fujionclinical.fhir.api.r4.document.DocumentService">
            <constructor-arg ref="r4DataSource"/>
        </bean>

        <bean id="r4DocumentTypeEnumerator"
              class="org.fujionclinical.fhir.api.r4.document.DocumentTypeEnumerator">
            <constructor-arg ref="r4DocumentService"/>
        </bean>

        <!-- Load formatters -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="org.fujionclinical.fhir.api.r4.common.R4Formatters"/>
        </bean>

        <!-- Initialize model -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="edu.utah.kmm.model.cool.mediator.fhir.r4.common.R4Utils"/>
        </bean>

    </beans>

</beans>
