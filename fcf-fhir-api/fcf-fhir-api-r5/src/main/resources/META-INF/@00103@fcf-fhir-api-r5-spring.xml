<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans profile="root">

        <!-- Data Source Configuration -->

        <bean id="r5DataSourceFactory"
              class="org.fujionclinical.fhir.api.r5.common.FhirDataSourceFactory"/>

        <bean id="r5DataSource" factory-bean="r5DataSourceFactory" factory-method="create">
            <constructor-arg value="FHIR_R5"/>
        </bean>

        <bean id="r5ConditionService"
              class="org.fujionclinical.fhir.api.r5.condition.ConditionService">
            <constructor-arg ref="r5DataSource"/>
        </bean>

        <bean id="r5MedicationService"
              class="org.fujionclinical.fhir.api.r5.medication.MedicationService">
            <constructor-arg ref="r5DataSource"/>
        </bean>

        <bean id="r5DocumentService"
              class="org.fujionclinical.fhir.api.r5.document.DocumentService">
            <constructor-arg ref="r5DataSource"/>
        </bean>

        <bean id="r5DocumentTypeEnumerator"
              class="org.fujionclinical.fhir.api.r5.document.DocumentTypeEnumerator">
            <constructor-arg ref="r5DocumentService"/>
        </bean>

        <!-- Load formatters -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="org.fujionclinical.fhir.api.r5.common.R5Formatters"/>
        </bean>

        <!-- Initialize model -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="edu.utah.kmm.model.cool.mediator.fhir.r5.common.R5Utils"/>
        </bean>

    </beans>

</beans>
