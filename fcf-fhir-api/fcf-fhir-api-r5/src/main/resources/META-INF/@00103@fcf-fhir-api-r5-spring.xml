<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans profile="root">

        <!-- Data Source Configuration -->

        <bean id="r5DataSourceFactory"
              class="org.fujionclinical.fhir.api.r5.common.FhirDataSourceFactory"/>

        <bean id="r5DataSource" factory-bean="r5DataSourceFactory" factory-method="create">
            <constructor-arg value="FHIR_R5"/>
        </bean>

        <bean id="r5ConditionService"
              class="org.fujionclinical.fhir.api.r5.condition.ConditionService">
            <constructor-arg ref="r5DataSource"/>
        </bean>

        <bean id="r5MedicationService"
              class="org.fujionclinical.fhir.api.r5.medication.MedicationService">
            <constructor-arg ref="r5DataSource"/>
        </bean>

        <bean id="r5DocumentService"
              class="org.fujionclinical.fhir.api.r5.document.DocumentService">
            <constructor-arg ref="r5DataSource"/>
        </bean>

        <bean id="r5DocumentTypeEnumerator"
              class="org.fujionclinical.fhir.api.r5.document.DocumentTypeEnumerator">
            <constructor-arg ref="r5DocumentService"/>
        </bean>

        <!-- Resource DAO Factories  -->

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.condition.ConditionDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.document.DocumentDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.encounter.EncounterDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.location.LocationDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.observation.ObservationDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.patient.PatientDAOFactory"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.practitioner.PractitionerDAOFactory"/>

        <!-- Model transforms -->

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.AnnotationTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.AttachmentTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.ConceptCodeTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.ConceptTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.ContactPointTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.IdentifierTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.PeriodTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.PersonNameTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.AddressTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.PrimitiveTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.QuantityTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.RangeTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.RatioTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.transform.SimpleQuantityTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.condition.ConditionTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.document.DocumentTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.encounter.EncounterTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.location.LocationTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.observation.ObservationComponentTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.observation.ReferenceRangeTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.patient.PatientTransform" factory-method="getInstance"/>

        <bean class="edu.utah.kmm.model.cool.mediator.fhir.r5.practitioner.PractitionerTransform" factory-method="getInstance"/>

        <!-- Other -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="org.fujionclinical.fhir.api.r5.common.R5Formatters"/>
        </bean>

    </beans>

</beans>
