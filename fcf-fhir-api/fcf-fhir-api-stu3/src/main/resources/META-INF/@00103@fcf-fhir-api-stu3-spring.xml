<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans profile="root">

        <!-- Data Source Configuration -->

        <bean id="stu3DataSourceFactory"
              class="org.fujionclinical.fhir.api.stu3.common.FhirDataSourceFactory"/>

        <bean id="stu3DataSource" factory-bean="stu3DataSourceFactory" factory-method="create">
            <constructor-arg value="FHIR_STU3"/>
        </bean>

        <bean id="stu3ConditionService"
              class="org.fujionclinical.fhir.api.stu3.condition.ConditionService">
            <constructor-arg ref="stu3DataSource"/>
        </bean>

        <bean id="stu3MedicationService"
              class="org.fujionclinical.fhir.api.stu3.medication.MedicationService">
            <constructor-arg ref="stu3DataSource"/>
        </bean>

        <bean id="stu3DocumentService"
              class="org.fujionclinical.fhir.api.stu3.document.DocumentService">
            <constructor-arg ref="stu3DataSource"/>
        </bean>

        <bean id="stu3DocumentTypeEnumerator"
              class="org.fujionclinical.fhir.api.stu3.document.DocumentTypeEnumerator">
            <constructor-arg ref="stu3DocumentService"/>
        </bean>

        <!-- Load formatters -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="org.fujionclinical.fhir.api.stu3.common.Stu3Formatters"/>
        </bean>

        <!-- Load transforms and factories -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="edu.utah.kmm.model.cool.mediator.fhir.stu3.common.Stu3Loader"/>
        </bean>

    </beans>

</beans>
