<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans profile="root">

        <!-- Data Source Configuration -->

        <bean id="stu3DataSourceFactory"
              class="org.fujionclinical.fhir.api.stu3.common.Stu3DataSourceFactory"/>

        <bean id="stu3DataSource" factory-bean="stu3DataSourceFactory" factory-method="create">
            <constructor-arg value="FHIR_STU3"/>
        </bean>

        <!-- Load formatters -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="org.fujionclinical.fhir.api.stu3.common.Stu3Formatters"/>
        </bean>

        <!-- Initialize model -->

        <bean class="org.fujionclinical.api.spring.SpringUtil" factory-method="loadClass">
            <constructor-arg value="edu.utah.kmm.model.cool.mediator.fhir.stu3.common.Stu3Utils"/>
        </bean>

    </beans>

</beans>
