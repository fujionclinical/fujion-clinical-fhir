<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<beans profile="root">
	
		<bean id="fcfScenarioRegistry" factory-method="getInstance"
			class="org.fujionclinical.fhir.dstu2.api.scenario.ScenarioRegistry" />
		
	</beans>
	
	<beans profile="child">
	
		<bean id="scenarioContext" parent="managedContext"
			class="org.fujionclinical.fhir.dstu2.api.scenario.ScenarioContext">
			<constructor-arg ref="fcfScenarioRegistry" />
		</bean>
	
	</beans>
	
</beans>
