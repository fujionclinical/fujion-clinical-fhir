<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.fujionclinical</groupId>
        <artifactId>fcf-fhir-webapp</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <name>FCF Test Harness</name>
    <description>FCF Test Harness</description>
    <artifactId>fcf-fhir-webapp-testharness</artifactId>
    <packaging>war</packaging>

    <properties>
        <fhir-spec>no-fhir-profile-specified</fhir-spec>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <warName>${project.artifactId}</warName>
                    <classifier>${fhir-spec}</classifier>
                    <escapeString>\</escapeString>
                    <webResources>
                        <resource>
                            <directory>src/main/webresources</directory>
                            <filtering>true</filtering>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>security-mock</id>
            <dependencies>
                <dependency>
                    <groupId>org.fujionclinical</groupId>
                    <artifactId>fcf-fhir-security-profile-mock</artifactId>
                    <version>${fcf.core.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>security-h2</id>
            <dependencies>
                <dependency>
                    <groupId>org.fujionclinical</groupId>
                    <artifactId>fcf-fhir-security-profile-h2</artifactId>
                    <version>${fcf.core.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>fhir-dstu2</id>
            <properties>
                <fhir-spec>dstu2</fhir-spec>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.fujionclinical</groupId>
                    <artifactId>fcf-fhir-webapp-profile-dstu2</artifactId>
                    <version>${fcf.core.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>fhir-stu3</id>
            <properties>
                <fhir-spec>stu3</fhir-spec>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.fujionclinical</groupId>
                    <artifactId>fcf-fhir-webapp-profile-stu3</artifactId>
                    <version>${fcf.core.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>fhir-r4</id>
            <properties>
                <fhir-spec>r4</fhir-spec>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.fujionclinical</groupId>
                    <artifactId>fcf-fhir-webapp-profile-r4</artifactId>
                    <version>${fcf.core.version}</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
