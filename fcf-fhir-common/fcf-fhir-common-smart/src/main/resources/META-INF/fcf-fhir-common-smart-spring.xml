<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<beans profile="root">

		<bean id="smartContextService" factory-method="getInstance" init-method="init"
			class="org.fujionclinical.fhir.common.smart.SmartContextService">
			<property name="smartContextBinder" ref="smartContextBinder" />
		</bean>

		<bean id="smartContextBinder"
			  class="org.fujionclinical.fhir.common.smart.SmartContextBinder" />

		<bean class="org.fujionclinical.fhir.common.smart.SmartLocator">
			<constructor-arg ref="pluginRegistry" />
		</bean>

	</beans>
	
	<beans profile="child">

		<bean id="smartContextRegistry"
			class="org.fujionclinical.fhir.common.smart.SmartContextRegistry" />
		
		<bean id="smartContextBase"
			abstract="true" init-method="init" destroy-method="destroy">
			<property name="eventManager" ref="eventManager" />
		</bean>

		<bean parent="smartContextBase" depends-on="userContext"
			class="org.fujionclinical.fhir.common.smart.SmartContextUser" />

	</beans>
</beans>
