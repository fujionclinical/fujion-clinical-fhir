<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

	<Properties>
		<Property name="log-path">../logs/</Property>
		<Property name="pattern-layout">%d{yyyy-MM-dd HH:mm:ss.SSS} %p %t %c - %m%n</Property>
	</Properties>

	<Appenders>
		<RollingFile name="exc"
					 filePattern="\${log-path}/@project.artifactId@-exception-%d{yyyy-MM-dd}.log"
					 fileName="\${log-path}/@project.artifactId@-exception.log">
			<PatternLayout pattern="\${pattern-layout}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
		</RollingFile>
		<RollingFile name="other"
					 filePattern="\${log-path}/@project.artifactId@-%d{yyyy-MM-dd}.log"
					 fileName="\${log-path}/@project.artifactId@.log">
			<PatternLayout pattern="\${pattern-layout}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
		</RollingFile>
		<Console name="stdout">
			<PatternLayout pattern="\${pattern-layout}" />
		</Console>
	</Appenders>

	<Loggers>
		<Logger name="EXCEPTION_LOG" additivity="false" level="info">
			<AppenderRef ref="exc" />
		</Logger>
		<Logger name="org.fujion" level="debug">
		</Logger>
		<Logger name="org.springframework" level="error">
		</Logger>
		<Root level="info">
			<AppenderRef ref="other" />
			<AppenderRef ref="stdout" />
		</Root>
	</Loggers>

</Configuration>
