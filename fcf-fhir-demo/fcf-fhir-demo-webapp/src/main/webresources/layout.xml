<layout name="@project.artifactId@" title="@project.description@" version="1.0">
    <_menubar/>
    <_toolbar/>
    <splitterview orientation="vertical">
        <splitterpane relative="false" size="71">
            <splitterview orientation="horizontal">
                <splitterpane relative="false" size="39">
                    <fcfPatientPhoto/>
                </splitterpane>
                <splitterpane relative="true" size="1000">
                    <fcfPatientHeader/>
                </splitterpane>
            </splitterview>
        </splitterpane>
        <splitterpane relative="false" size="1000">
            <tabview orientation="top">
                <tabpane label="Patient Chart">
                    <treeview>
                        <!--
                        <treepane label="Scenario Builder">
                            <fcfScenarioBuilder/>
                        </treepane>
                        -->
                        <treepane label="Encounters">
                            <fcfEncounters/>
                        </treepane>
                        <treepane label="Family History">
                            <fcfFhirFamilyHistory/>
                        </treepane>
                        <treepane label="Adverse Reactions">
                            <fcfFhirAdverseReactions/>
                        </treepane>
                        <treepane label="Conditions">
                            <fcfConditions/>
                        </treepane>
                        <!--
                        <treepane label="Documents">
                            <fcfFhirDocuments/>
                        </treepane>
                        -->
                        <treepane label="Diagnostic Reports">
                            <fcfFhirDiagnosticReports/>
                        </treepane>
                        <treepane label="All Orders">
                            <fcfFhirOrders/>
                        </treepane>
                        <treepane label="Medication Orders">
                            <fcfFhirMedicationOrders/>
                        </treepane>
                        <treepane label="Observation Results">
                            <fcfFhirObservations/>
                        </treepane>
                        <treepane label="Procedures">
                            <fcfFhirProcedures/>
                        </treepane>
                    </treeview>
                </tabpane>
            </tabview>
        </splitterpane>
        <splitterpane relative="false" size="40">
            <fcfStatusPanel/>
        </splitterpane>
    </splitterview>
</layout>
