<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:fcp="http://www.fujionclinical.org/schema/plugin"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
		http://www.fujionclinical.org/schema/plugin
		http://www.fujionclinical.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">
		
		<fcp:plugin id="fcfScenarioBuilder" name="Scenario Builder"
					url="web/org/fujionclinical/fhir/plugin/scenario/common/scenarioManager.fsp">
			<fcp:resource>
				<fcp:action-resource id="fcfScenarioShow"
					label="${@msg.fcf.scenario.action.label}"
					script="groovy:org.fujionclinical.fhir.plugin.scenario.${fhir.context.version}.ScenarioManagerController.show();" />
			</fcp:resource>
		</fcp:plugin>

	</beans>
	
	<beans profile="child">
	
		<bean id="scenarioManagerController" scope="prototype"
			  class="org.fujionclinical.fhir.plugin.scenario.${fhir.context.version}.controller.ScenarioManagerController">
			<constructor-arg ref="scenarioRegistry" />
		</bean>	
			
		<bean id="scenarioViewResourcesController" scope="prototype"
			  class="org.fujionclinical.fhir.plugin.scenario.${fhir.context.version}.controller.ViewResourcesController">
			<constructor-arg ref="fhirService" />
		</bean>

		<bean id="scenarioContext" parent="managedContext"
			  class="org.fujionclinical.fhir.scenario.api.${fhir.context.version}.ScenarioContext">
			<constructor-arg ref="scenarioRegistry" />
		</bean>

	</beans>
</beans>
